<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView android:id="@+id/fstTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Welcome to tUtor!"
            android:layout_gravity="center"/>


        <Button
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:background="@android:color/holo_orange_light"
            android:drawableLeft="@drawable/ic_school_black_24dp"
            android:onClick="profile_action"
            android:padding="10dp"
            android:text="Profile"
            android:textColor="#fff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/searchForTutor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:background="@android:color/holo_blue_light"
            android:drawableLeft="@drawable/ic_search_black_24dp"
            android:onClick="searchTutor_action"
            android:padding="10dp"
            android:text="Search for a Tutor"
            android:textColor="#fff"
            android:textSize="20sp" />


        <Button
            android:id="@+id/tutorList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:background="@android:color/holo_orange_light"
            android:drawableLeft="@drawable/ic_portrait_black_24dp"
            android:onClick="tutorList_action"
            android:padding="10dp"
            android:text="Tutor List"
            android:textColor="#fff"
            android:textSize="20sp" />


        <Button
            android:id="@+id/messagesList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:background="@android:color/holo_blue_light"
            android:drawableLeft="@drawable/ic_mail_outline_black_24dp"
            android:onClick="message_action"
            android:padding="10dp"
            android:text="Messages "
            android:textColor="#fff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:background="@android:color/holo_orange_light"
            android:drawableLeft="@drawable/ic_library_books_black_24dp"
            android:onClick="feedback_action"
            android:padding="10dp"
            android:text="Feedback"
            android:textColor="#fff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/groupChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:background="@android:color/holo_blue_light"
            android:drawableLeft="@drawable/ic_forum_black_24dp"
            android:onClick="groupChat_action"
            android:padding="10dp"
            android:text="Group Chat"
            android:textColor="#fff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:background="@android:color/holo_orange_light"
            android:drawableLeft="@drawable/ic_notifications_active_black_24dp"
            android:onClick="notifications_action"
            android:padding="10dp"
            android:text="Notifications"
            android:textColor="#fff"
            android:textSize="20sp" />


    </LinearLayout>
</ScrollView>